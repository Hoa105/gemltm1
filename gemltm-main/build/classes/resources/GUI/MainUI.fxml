<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="client.GUI.MainController" prefWidth="500" prefHeight="400">
    <top>
        <MenuBar>
            <Menu text="Menu">
                <MenuItem text="Đăng xuất" onAction="#handleLogout" />
            </Menu>
        </MenuBar>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="30">
            <padding>
                <Insets top="50" right="50" bottom="50" left="50" />
            </padding>

            <!-- Tiêu đề chào mừng -->
            <Label fx:id="welcomeLabel" text="Chào mừng!"
                style="-fx-font-size: 24px; -fx-font-weight: bold;" />

            <!-- 3 Button chính -->
            <Button text="Danh Sách Người Chơi Online" onAction="#handleShowPlayerList"
                prefWidth="300" prefHeight="50"
                style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white;" />

            <Button text="Lịch Sử Trận Đấu" onAction="#handleShowHistory"
                prefWidth="300" prefHeight="50"
                style="-fx-font-size: 16px; -fx-background-color: #2196F3; -fx-text-fill: white;" />

            <Button text="Bảng Xếp Hạng" onAction="#handleShowLeaderboard"
                prefWidth="300" prefHeight="50"
                style="-fx-font-size: 16px; -fx-background-color: #FF9800; -fx-text-fill: white;" />
        </VBox>
    </center>
</BorderPane>