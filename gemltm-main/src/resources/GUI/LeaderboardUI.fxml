<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="client.GUI.LeaderboardController">
    <top>
        <VBox>
            <MenuBar>
                <Menu text="Menu">
                    <MenuItem text="Quay lại" onAction="#handleBack" />
                    <MenuItem text="Đăng xuất" onAction="#handleLogout" />
                </Menu>
            </MenuBar>
            <Label text="Bảng Xếp Hạng"
                style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 10px;" />
        </VBox>
    </top>
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <TableView fx:id="leaderboardTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn text="Hạng" fx:id="rankColumn" prefWidth="80" />
                    <TableColumn text="Tên" fx:id="lbNameColumn" prefWidth="200" />
                    <TableColumn text="Điểm" fx:id="lbPointsColumn" prefWidth="150" />
                </columns>
            </TableView>
            <HBox alignment="CENTER" spacing="10">
                <Button text="◄ Quay lại Màn hình chính" onAction="#handleBack"
                    style="-fx-font-size: 14px; -fx-background-color: #9E9E9E; -fx-text-fill: white;"
                    prefWidth="200" prefHeight="40" />
            </HBox>
        </VBox>
    </center>
</BorderPane>